<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProductDetailsTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/product_details_spec_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/product_details_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FavoriteItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/list_item_favorite_name_text_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/list_item_favorite_name_text_size</item>
    </style>

    <style name="FavoriteEmptyStateTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">@dimen/favorite_empty_state_first_size</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/main_text_label_margin_start</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">@dimen/main_text_label_size</item>
    </style>

    <style name="CheckoutLabelsStyle" parent="MainTextStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/delivery_txt_input_name_height</item>
        <item name="android:layout_margin">@dimen/delivery_txt_input_name_margin</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/delivery_txt_input_name_padding</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
    </style>

    <style name="PaymentOptionStyle">
        <item name="android:layout_width">@dimen/payment_option_parent_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/payment_option_parent_margin</item>
        <item name="android:background">@drawable/payment_parent_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/payment_option_parent_padding</item>
    </style>

    <style name="UserOrderListTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/list_item_user_order_text_margin</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:padding">@dimen/list_item_user_order_text_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
</resources>